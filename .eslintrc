{
  "root": true,

  "extends": ["eslint:recommended", "plugin:prettier/recommended", "plugin:jest/recommended"],

  "plugins": ["prettier", "jest"],

  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true,
    "jest/globals": true
  },
  "globals": {},
  "rules": {
    "complexity": ["error", { "max": 8 }],
    "max-depth": ["error", 4],
    "max-lines": ["error", 128],
    "max-lines-per-function": ["error", 64],
    "max-nested-callbacks": ["error", 4],
    "max-params": ["error", 4],
    "no-multiple-empty-lines": ["warn", { "max": 2, "maxEOF": 1 }],
    "no-nested-ternary": "error",
    "no-unused-vars": ["warn"]
  },
  "parserOptions": {
    "ecmaVersion": 10,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  }
}
